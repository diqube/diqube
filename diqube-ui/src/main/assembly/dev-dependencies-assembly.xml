<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
  <id>minjs-assembly</id>
  <formats>
    <format>dir</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>bower_components</directory>
      <includes>
        <include>paper-*/*.html</include>
        <include>paper-styles/classes/*.html</include>
        <include>paper-menu/*-shared.css</include>
        <include>iron-*/*.html</include>
        <include>iron-flex-layout/classes/*.html</include>
        <include>neon-animation/*.html</include>
        <include>neon-animation/animations/*.html</include>
        <include>font-roboto/*.html</include>
        <include>polymer/polymer*</include>
      </includes>
      <excludes>
        <exclude>**/index.html</exclude>
      </excludes>
      <outputDirectory>web/lib/polymer</outputDirectory>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>bower_components/web-animations-js/web-animations-next-lite.min.js</source>
      <destName>web/lib/polymer/web-animations-js/web-animations-next-lite.min.js</destName>
    </file>
    <file>
      <source>bower_components/webcomponentsjs/webcomponents.js</source>
      <destName>web/lib/webcomponents.js</destName>
    </file>
    <file>
      <source>bower_components/material-design-lite/material.css</source>
      <destName>web/lib/mdl.css</destName>
    </file>
    <file>
      <source>bower_components/material-design-lite/material.js</source>
      <destName>web/lib/mdl.js</destName>
    </file>
    <file>
      <source>bower_components/node-uuid/uuid.js</source>
      <destName>web/lib/uuid.js</destName>
    </file>
    <file>
      <source>bower_components/Chart.js/Chart.js</source>
      <destName>web/lib/Chart.js</destName>
    </file>
    <file>
      <source>bower_components/moment/min/moment-with-locales.min.js</source>
      <destName>web/lib/moment-with-locales.js</destName>
    </file>
    <file>
      <source>node_modules/angular2/bundles/angular2-polyfills.js</source>
      <destName>web/lib/angular2-polyfills.js</destName>
    </file>
    <file>
      <source>node_modules/systemjs/dist/system.src.js</source>
      <destName>web/lib/system.js</destName>
    </file>
    <file>
      <source>node_modules/rxjs/bundles/Rx.js</source>
      <destName>web/lib/Rx.js</destName>
    </file>
    <file>
      <source>node_modules/angular2/bundles/angular2.dev.js</source>
      <destName>web/lib/angular2.js</destName>
    </file>
    <file>
      <source>node_modules/angular2/bundles/router.dev.js</source>
      <destName>web/lib/angular2-router.js</destName>
    </file>
    
    <!-- Font awesome -->
    <file>
      <source>bower_components/font-awesome/css/font-awesome.min.css</source>
      <destName>web/lib/fonts/font-awesome.css</destName>
    </file>
    <file>
      <source>bower_components/font-awesome/fonts/fontawesome-webfont.eot</source>
      <destName>web/lib/fonts/fontawesome-webfont.eot</destName>
    </file>
    <file>
      <source>bower_components/font-awesome/fonts/fontawesome-webfont.svg</source>
      <destName>web/lib/fonts/fontawesome-webfont.svg</destName>
    </file>
    <file>
      <source>bower_components/font-awesome/fonts/fontawesome-webfont.ttf</source>
      <destName>web/lib/fonts/fontawesome-webfont.ttf</destName>
    </file>
    <file>
      <source>bower_components/font-awesome/fonts/fontawesome-webfont.woff</source>
      <destName>web/lib/fonts/fontawesome-webfont.woff</destName>
    </file>
    <file>
      <source>bower_components/font-awesome/fonts/fontawesome-webfont.woff2</source>
      <destName>web/lib/fonts/fontawesome-webfont.woff2</destName>
    </file>
    <file>
      <source>bower_components/font-awesome/fonts/FontAwesome.otf</source>
      <destName>web/lib/fonts/FontAwesome.otf</destName>
    </file>
  </files>
</assembly>

